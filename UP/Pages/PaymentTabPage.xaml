<Page x:Class="UP.Pages.PaymentTabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:UP.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Платежи"
      Background="{DynamicResource AppBackground}">

    <Page.Resources>
        <!-- Конвертер: Сумма = Price * Num -->
        <local:MultiplyConverter x:Key="TotalAmountConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0"
                  x:Name="DataGridPayment"
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Background="{DynamicResource AppBackground}"
                  Foreground="{DynamicResource AppForeground}"
                  BorderBrush="{DynamicResource AppBorder}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="100"/>
                <!-- ВНИМАНИЕ: Users.FIO, а не User.FIO -->
                <DataGridTextColumn Header="Пользователь" Binding="{Binding Users.FIO}" Width="200"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category.Name}" Width="200"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="250"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Num}" Width="80"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat=C}" Width="100"/>

                <!-- Сумма = Цена * Кол-во, без ViewModel -->
                <DataGridTextColumn Header="Сумма" Width="120">
                    <DataGridTextColumn.Binding>
                        <MultiBinding Converter="{StaticResource TotalAmountConverter}" StringFormat="C">
                            <Binding Path="Price"/>
                            <Binding Path="Num"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="ButtonEdit"
                                    Content="Редактировать"
                                    Click="ButtonEdit_Click"
                                    Style="{DynamicResource OutlineButton}"
                                    Padding="6,4"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button x:Name="ButtonAdd"
                    Content="Добавить платеж"
                    Click="ButtonAdd_Click"
                    Width="170" Margin="6"
                    Style="{DynamicResource PrimaryButton}"/>
            <Button x:Name="ButtonDel"
                    Content="Удалить выбранный"
                    Click="ButtonDel_Click"
                    Width="180" Margin="6"
                    Style="{DynamicResource OutlineButton}"/>
            <Button x:Name="ButtonRefresh"
                    Content="Обновить"
                    Click="ButtonRefresh_Click"
                    Width="120" Margin="6"
                    Style="{DynamicResource OutlineButton}"/>
        </StackPanel>
    </Grid>
</Page>
