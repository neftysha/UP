<Page x:Class="UP.Pages.UsersTabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="Пользователи"
      Background="{DynamicResource AppBackground}" Height="560" Width="1015">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="64"/>
        </Grid.RowDefinitions>

        <!-- Таблица пользователей -->
        <Border Grid.Row="0" Style="{DynamicResource Card}">
            <DataGrid x:Name="DataGridUser"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Margin="0">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="60"/>
                    <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="140"/>
                    <DataGridTextColumn Header="Пароль" Binding="{Binding Password}" Width="120"/>
                    <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="120"/>
                    <DataGridTextColumn Header="ФИО" Binding="{Binding FIO}" Width="*"/>
                    <DataGridTextColumn Header="Фото" Binding="{Binding Photo}" Width="200"/>

                    <DataGridTemplateColumn Header="" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="ButtonEdit"
                                        Content="Редактировать"
                                        Click="ButtonEdit_Click"
                                        Style="{DynamicResource SmallAccentButton}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button x:Name="ButtonAdd"
                    Content="Добавить пользователя"
                    Click="ButtonAdd_Click"
                    Width="200" Margin="6,0"
                    Style="{DynamicResource PrimaryButton}"/>

            <Button x:Name="ButtonDel"
                    Content="Удалить выбранного"
                    Click="ButtonDel_Click"
                    Width="180" Margin="6,0"
                    Style="{DynamicResource OutlineButton}"/>

            <Button x:Name="ButtonRefresh"
                    Content="Обновить"
                    Click="ButtonRefresh_Click"
                    Width="120" Margin="6,0"
                    Style="{DynamicResource GhostButton}"/>
        </StackPanel>
    </Grid>
</Page>
