<Page x:Class="UP.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource AppBackground}"
      Foreground="{DynamicResource AppForeground}">

    <Grid Width="800" Height="450" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="271*"/>
            <ColumnDefinition Width="529*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="217*"/>
            <RowDefinition Height="233*"/>
        </Grid.RowDefinitions>

        <!-- Левая колонка -->
        <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="40,80,0,0" VerticalAlignment="Top">
            <TextBlock Text="Логин" Style="{StaticResource SubHeaderText}" Margin="0,0,0,6"/>
            <TextBox x:Name="TextBoxLogin"
                     Width="220" Height="34"
                     Style="{StaticResource RoundedTextBox}"
                     ToolTip="Введите логин или почту"
                     TextChanged="TextBoxLogin_TextChanged"/>

            <TextBlock Text="Пароль" Style="{StaticResource SubHeaderText}" Margin="0,12,0,6"/>
            <PasswordBox x:Name="PasswordBox"
                         Width="220" Height="34"
                         Style="{StaticResource RoundedPasswordBox}"
                         ToolTip="Введите пароль"/>

            <!-- === КАПЧА === -->
            <TextBlock Text="Введите код с картинки"
                       Style="{StaticResource SubHeaderText}"
                       Margin="0,14,0,6"/>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center">

                <DockPanel LastChildFill="False" Margin="0,0,0,6">
                    <Border Background="#F3F3F3"
                            BorderBrush="#C0C0C0"
                            BorderThickness="1.2"
                            CornerRadius="6"
                            Width="220" Height="65"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Padding="3"
                            SnapsToDevicePixels="True">
                        <Image x:Name="CaptchaImage"
                               Width="210" Height="55"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               RenderOptions.EdgeMode="Aliased"/>
                    </Border>

                    <Button x:Name="ButtonRefreshCaptcha"
                            Width="42" Height="42"
                            Margin="10,12,0,0"
                            VerticalAlignment="Center"
                            Content="↻"
                            FontSize="20"
                            ToolTip="Обновить капчу"
                            Style="{StaticResource SmallAccentButton}"
                            DockPanel.Dock="Right"
                            Click="ButtonRefreshCaptcha_Click"/>
                </DockPanel>

                <TextBox x:Name="TextBoxCaptcha"
                         Width="220" Height="36"
                         Style="{StaticResource RoundedTextBox}"
                         ToolTip="Введите символы с картинки"
                         HorizontalAlignment="Left"
                         FontSize="14"
                         Margin="0,2,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Правая колонка -->
        <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                    VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="ButtonAuth"
                    Content="Войти"
                    Width="160" Height="44"
                    Style="{StaticResource PrimaryButton}"
                    Margin="0,0,0,10"
                    Click="ButtonAuth_Click"/>
            <Button x:Name="ButtonReg"
                    Content="Регистрация"
                    Width="160" Height="38"
                    Style="{StaticResource OutlineButton}"
                    Margin="0,0,0,10"
                    Click="ButtonReg_Click"/>
            <Button x:Name="ButtonChangePassword"
                    Content="Смена пароля"
                    Width="160" Height="38"
                    Style="{StaticResource GhostButton}"
                    Click="ButtonChangePassword_Click"/>
        </StackPanel>
    </Grid>
</Page>
