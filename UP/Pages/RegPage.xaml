<Page x:Class="UP.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="Регистрация"
      Background="{DynamicResource AppBackground}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="739*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.ColumnSpan="2"
                   Text="Регистрация нового пользователя"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Style="{DynamicResource HeaderText}"/>

        <!-- Карточка формы -->
        <Border Grid.Column="1" Grid.Row="1" Margin="40" VerticalAlignment="Center"
                Style="{DynamicResource Card}">
            <StackPanel>

                <TextBlock Text="Логин:" Style="{DynamicResource BodyText}" Margin="0,0,0,4"/>
                <TextBox x:Name="txtbxLog"
                         ToolTip="Введите логин"
                         TextChanged="txtbxLog_TextChanged"
                         Height="40"
                         Style="{DynamicResource RoundedTextBox}"/>

                <TextBlock Text="Пароль:" Style="{DynamicResource BodyText}" Margin="0,10,0,4"/>
                <PasswordBox x:Name="passBxFrst"
                             ToolTip="Введите пароль"
                             PasswordChanged="passBxFrst_PasswordChanged"
                             Height="40"
                             Style="{DynamicResource RoundedPasswordBox}"/>

                <TextBlock Text="Подтвердите пароль:" Style="{DynamicResource BodyText}" Margin="0,10,0,4"/>
                <PasswordBox x:Name="passBxScnd"
                             ToolTip="Повторите пароль"
                             PasswordChanged="passBxScnd_PasswordChanged"
                             Height="40"
                             Style="{DynamicResource RoundedPasswordBox}"/>

                <TextBlock Text="Выберите роль:" Style="{DynamicResource BodyText}" Margin="0,10,0,4"/>
                <ComboBox x:Name="comboBxRole"
                          ToolTip="Выберите роль"
                          Height="40"
                          Style="{DynamicResource CleanComboBox}">
                    <ComboBoxItem Content="User" IsSelected="True"/>
                    <ComboBoxItem Content="Admin"/>
                </ComboBox>

                <TextBlock Text="Введите ФИО:" Style="{DynamicResource BodyText}" Margin="0,10,0,4"/>
                <TextBox x:Name="txtbxFIO"
                         ToolTip="Введите ФИО"
                         TextChanged="txtbxFIO_TextChanged"
                         Height="40"
                         Style="{DynamicResource RoundedTextBox}"/>

                <Button x:Name="regButton"
                        Content="Зарегистрироваться"
                        Click="regButton_Click"
                        Width="200"
                        Margin="0,24,0,0"
                        HorizontalAlignment="Left"
                        Style="{DynamicResource PrimaryButton}"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
