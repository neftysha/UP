<Page x:Class="UP.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Администратор"
      Background="{DynamicResource AppBackground}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                   Text="Панель администратора"
                   HorizontalAlignment="Center"
                   Margin="0,4,0,12"
                   Style="{DynamicResource HeaderText}"/>

        <!-- Карточка с кнопками -->
        <Border Grid.Row="1" Style="{DynamicResource Card}">
            <UniformGrid Columns="2" Rows="2" Margin="12" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <Button x:Name="BtnTab1"
                        Content="Таблица пользователей"
                        Click="BtnTab1_Click"
                        Height="80" Margin="10"
                        Style="{DynamicResource PrimaryButton}"/>

                <Button x:Name="BtnTab2"
                        Content="Таблица категорий"
                        Click="BtnTab2_Click"
                        Height="80" Margin="10"
                        Style="{DynamicResource PrimaryButton}"/>

                <Button x:Name="BtnTab3"
                        Content="Таблица платежей"
                        Click="BtnTab3_Click"
                        Height="80" Margin="10"
                        Style="{DynamicResource PrimaryButton}"/>

                <Button x:Name="BtnTab4"
                        Content="Диаграммы"
                        Click="BtnTab4_Click"
                        Height="80" Margin="10"
                        Style="{DynamicResource PrimaryButton}"/>
            </UniformGrid>
        </Border>
    </Grid>
</Page>
