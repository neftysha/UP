<Page x:Class="UP.Pages.CategoryTabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Категории"
      Background="{DynamicResource AppBackground}">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Таблица категорий -->
        <Border Grid.Row="0" Style="{DynamicResource Card}">
            <DataGrid x:Name="DataGridCategory"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Margin="0">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="60"/>
                    <DataGridTextColumn Header="Название категории" Binding="{Binding Name}" Width="*"/>

                    <DataGridTemplateColumn Header="" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="ButtonEdit"
                                        Content="Редактировать"
                                        Click="ButtonEdit_Click"
                                        Style="{DynamicResource SmallAccentButton}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button x:Name="ButtonAdd"
                    Content="Добавить категорию"
                    Click="ButtonAdd_Click"
                    Width="172" Margin="6,0"
                    Style="{DynamicResource PrimaryButton}"/>

            <Button x:Name="ButtonDel"
                    Content="Удалить выбранную"
                    Click="ButtonDel_Click"
                    Width="168" Margin="6,0"
                    Style="{DynamicResource OutlineButton}"/>

            <Button x:Name="ButtonRefresh"
                    Content="Обновить"
                    Click="ButtonRefresh_Click"
                    Width="120" Margin="6,0"
                    Style="{DynamicResource GhostButton}"/>
        </StackPanel>
    </Grid>
</Page>
