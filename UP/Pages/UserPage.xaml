<Page x:Class="UP.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:UP.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Пользователь"
      Background="{DynamicResource AppBackground}">

    <Page.Resources>
        <!-- Подключаем конвертер прямо здесь -->
        <local:UserPhotoConverter x:Key="UserPhotoConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ======== Панель фильтров ======== -->
        <Border Grid.Row="0" Margin="10" Style="{DynamicResource Card}">
            <WrapPanel VerticalAlignment="Center">
                <TextBlock Text="Введите ФИО для поиска:" 
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"
                           Style="{DynamicResource CaptionText}"/>

                <TextBox x:Name="fioFilterTextBox"
                         MinWidth="180"
                         Margin="0,0,12,0"
                         Style="{DynamicResource RoundedTextBox}"
                         TextChanged="fioFilterTextBox_TextChanged"/>

                <TextBlock Text="Сортировка по ФИО:" 
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"
                           Style="{DynamicResource CaptionText}"/>

                <ComboBox x:Name="sortComboBox"
                          Width="170" Height="32"
                          Margin="0,0,12,0"
                          SelectedIndex="0"
                          SelectionChanged="sortComboBox_SelectionChanged"
                          Style="{DynamicResource CleanComboBox}">
                    <ComboBoxItem Content="По возрастанию"/>
                    <ComboBoxItem Content="По убыванию"/>
                </ComboBox>

                <CheckBox x:Name="onlyAdminCheckBox"
                          Content="Только администраторы"
                          Margin="0,0,12,0"
                          VerticalAlignment="Center"
                          Checked="onlyAdminCheckBox_Checked"
                          Unchecked="onlyAdminCheckBox_Unchecked"
                          Style="{DynamicResource ThemedCheckBox}"/>

                <Button x:Name="clearFiltersButton"
                        Content="Очистить фильтры"
                        Click="clearFiltersButton_Click"
                        Style="{DynamicResource OutlineButton}"/>
            </WrapPanel>
        </Border>

        <!-- ======== Список пользователей ======== -->
        <ListView x:Name="ListUser"
                  Grid.Row="1"
                  Margin="10"
                  Style="{DynamicResource SimpleListView}"
                  HorizontalContentAlignment="Center"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{DynamicResource Card}" Width="260" Height="320" Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="200"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- ======== ФИО ======== -->
                            <TextBlock Grid.Row="0"
                                       Text="{Binding FIO}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,10"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       Foreground="{DynamicResource AppForeground}"/>

                            <!-- ======== Фото ======== -->
                            <Image Grid.Row="1"
                                   Width="180" Height="180"
                                   Stretch="UniformToFill"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5">
                                <Image.Source>
                                    <Binding Path="Photo" Converter="{StaticResource UserPhotoConverter}"/>
                                </Image.Source>
                            </Image>

                            <!-- ======== Роль ======== -->
                            <TextBlock Grid.Row="2"
                                       Text="{Binding Role}"
                                       Margin="0,10,0,5"
                                       TextAlignment="Center"
                                       FontSize="14"
                                       Foreground="{DynamicResource AppForeground}"/>

                            <!-- ======== Логин ======== -->
                            <TextBlock Grid.Row="3"
                                       Text="{Binding Login}"
                                       TextAlignment="Center"
                                       Style="{DynamicResource CaptionText}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
